{
  "dependencies": {
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.92.1",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "watch:sass": "npx sass --watch src/scss/:src/css/",
    "watch:typescript": "npx tsc --watch",
    "watch:http-server": "npx http-server -p 8000",
    "watch": "npm-run-all -p -r watch:sass watch:typescript watch:http-server",
    "build:sass": "npx sass src/scss/:src/css/ --no-source-map --no-error-css --style=compressed",
    "build:typescript": "npx tsc",
    "build": "npm-run-all -p build:sass build:typescript"
  }
}
